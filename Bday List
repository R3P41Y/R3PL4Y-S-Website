⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⣿⣿⠇⠀⠀⠀⠀⠀⠀⠀⠀⢸⣧⠀⠀⢀⠞⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⡠⠙⢿⣿⣇⡀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀
⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⢀⡿⠿⠀⠀⠀⠀⠀⠀⠀⠀⠀⠘⡿⠦⠠⠋⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠧⠤⠄⠙⡿⠿⠦⠤⠤⠤⠤⠄⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀`;

    const titleElement = document.getElementById('asciiTitle');
    const loadingElement = document.getElementById('asciiLoading');
    const contentElement = document.getElementById('content');
    const loadingScreen = document.getElementById('loadingScreen');
    
    let currentLine = 0;
    const asciiLines = asciiArt.split('\n');

    function showNextLine(element) {
        if (currentLine < asciiLines.length) {
            element.textContent += asciiLines[currentLine] + '\n';
            currentLine++;
            setTimeout(() => showNextLine(element), 50); // Speed adjusted to 50ms per line for faster loading
        } else if (element === loadingElement) {
            setTimeout(hideLoadingScreen, 300); // Slight delay before hiding the loading screen
        }
    }

    function hideLoadingScreen() {
        loadingScreen.classList.add('hidden');
        document.body.style.overflow = 'auto';  // Enable scroll after loading
        showNextLine(titleElement); // Show ASCII on the main page
    }

    // Start the loading animation
    window.onload = () => showNextLine(loadingElement);

    // Collapsible Dropdown Functionality
    const collapsibles = document.querySelectorAll('.collapsible');

    collapsibles.forEach((collapsible) => {
        collapsible.addEventListener('click', function() {
            this.classList.toggle('active');
            const content = this.nextElementSibling;
            if (content.style.maxHeight) {
                content.style.maxHeight = null;
            } else {
                content.style.maxHeight = content.scrollHeight + "px";
            }
        });
    });
</script>
